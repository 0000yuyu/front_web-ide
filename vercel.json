{
  "rewrites": [{ "source": "/(.*)", "destination": "/index.html" }],
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)",
      "dest": "https://your-backend-domain.com/$1"
    },
    {
      "src": "^/api/ws(.*)",
      "dest": "wss://your-backend-domain.com/$1"
    }
  ]
}
